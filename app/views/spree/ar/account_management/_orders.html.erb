        <div class="col-lg-12 col-md-12 col-sm-12 det-ord"> 
          <div class="col-lg-12 col-md-12 col-sm-12 odr-set-main">
            <div class="col-lg-12 col-md-12 col-sm-12 wet-text">
              <p> <%= order_content.try(:description) %></p>
            </div>
            <% parent_orders = @orders.select{|s| s.parent_order == nil} %>
            <% parent_orders.each do |main_order| %> 
              <%# state_class = main_order.completed? && main_order.shipped? ? "#D3D3D3": "white"%>
              <% if (main_order.complete? || main_order.shipped?) && main_order.sub_orders.any? %>
                <%= render partial: "spree/ar/account_management/orders/close_order", locals: {main_order: main_order} %>
              <% else %>
                <%= render partial: "spree/ar/account_management/orders/open_order", locals: {main_order: main_order} %>
              <% end%>
            <% end %>
            <div class="clearfix"></div>
             <div class="lod-btn lo-pol text-center">
              <button>ﻥﺪﻣ ﻦﻔﺴﻟﺍ</button>
            </div>

          </div>      
      </div>
      </div>
      <%= render  partial: "spree/ar/account_management/side_bar_tab" %>
    </div>
  </div>

  <div class="clearfix"></div>
  <div class="adver-sec">
    <div class="container">
      <div class="adver-sec-mn"> 
          <%= image_tag "advertize.jpg",class: "img-responsive", alt: "" %>
       </div>
    </div>
  </div>

<% end %>

