<% @user = @user.present? ? @user : spree_current_user %>
 <% Globalize.with_locale (I18n.locale) do %> 
  <div class="col-lg-2 col-md-2 col-sm-3 option-stor-lft p-0" dir="rtl">
    <ul class="profile-set-mg">
