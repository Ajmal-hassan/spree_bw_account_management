<% user_contents     = Spree::PageContent.from_gen_slug('user') %>
<% user_btn_contents = user_contents.from_gen_slug('user-btn') %>
<% user_main_contents = user_contents.from_gen_slug('user-main') %>
<% user_fields_contents = user_contents.from_gen_slug('user-field') %>
<% user_personal_content = user_main_contents.spec_slug('user-main-heading-desc').last%>
<% user_measurement_content = user_main_contents.spec_slug('user-main-msr-heading-desc').last%>
<% user_personal_btn_content = user_btn_contents.spec_slug('user-btn-label-save').last%>
<% user_measurement_btn_content = user_btn_contents.spec_slug('user-btn-msr-label-save').last%>
<% user_first_name = user_fields_contents.spec_slug('user-field-label-first-name').last%>
<% user_last_name = user_fields_contents.spec_slug('user-field-label-last-name').last%>
<% user_email = user_fields_contents.spec_slug('user-field-label-email').last%>
<% user_phone_number = user_fields_contents.spec_slug('user-field-label-phone-number').last%>
<% user_birth_date = user_fields_contents.spec_slug('user-field-label-birth-date').last%>
<% user_birth_month = user_fields_contents.spec_slug('user-field-label-birth-month').last%>
<% user_msr_head = user_fields_contents.spec_slug('user-field-msr-label-head').last%>
<% user_msr_shld_lft = user_fields_contents.spec_slug('user-field-msr-shld-lft').last%>
<% user_msr_shld_rht = user_fields_contents.spec_slug('user-field-msr-shld-rgt').last%>
<% user_msr_lft_arm = user_fields_contents.spec_slug('user-field-msr-label-lft-arm').last%>


<% Globalize.with_locale (I18n.locale) do %> 
  <div class="text-center">
    <h1 class="text-center "><%= user_personal_content.try(:title) %></h1>

    <%= f.submit user_personal_btn_content.try(:title), style: "margin-top: -39px;", :class => "btn btn-success pull-right" %>
  </div>
  <hr>
  <p class="text-center"><%= user_personal_content.try(:description) %></p>


  <div class="row narrow-row-md">
    <div class="col-sm-6">
      <div class="form-group">
        <label class="control-label">Email Address<span class="required">*</span></label>
        <%= f.email_field :email, :class => 'form-control', :placeholder => user_email.try(:title) %>
      </div>
    </div>
  </div>

  	<div class="row narrow-row-md">
  	  <div class="col-sm-6">
  	    <div class="form-group">
          <label class="control-label">First Name<span class="required">*</span></label>
          <%= f.text_field :first_name, :class => 'form-control', :placeholder => user_first_name.try(:title) %>
  	      <!--<label class="control-label">Enter a Password<span class="required">*</span></label>-->
  	      <!--<#%= f.password_field :password, :class => 'form-control', :placeholder => Spree.t(:password) %>-->
  	      <!--<div class="form-control-legend">Minimum 7 characters. Must include at least 1 letter and 1 number.</div>-->
  	    </div>
  	  </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label class="control-label">Last Name<span class="required">*</span></label>
          <%= f.text_field :last_name, :class => 'form-control', :placeholder => user_last_name.try(:title) %>
        </div>
      </div>
  	</div>
  	<div class="row narrow-row-md">
  	  <div class="col-sm-6">
  	    <div class="form-group">
          <label class="control-label">Phone Number<span class="required">*</span></label>
          <%= f.text_field :phone_number, :class => 'form-control', :placeholder => user_phone_number.try(:title) %>
  	      <!--<label class="control-label">Confirm Password<span class="required">*</span></label>-->
  	       <!--<#%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => Spree.t(:confirm_password) %>-->
  	    </div>
  	  </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label class="control-label">Date of birth<span class="required">*</span></label>
          <%= f.select :date_of_birth, options_for_select((1..31).to_a.map{|num| [num,num]}, f.object.date_of_birth.to_i),{},{:placeholder => user_birth_date.try(:title)}%>
          <%= f.select :month_of_birth, options_for_select(Date::MONTHNAMES.compact.map{|mon| [mon,mon.downcase]}, f.object.month_of_birth),{},{:placeholder => user_birth_month.try(:title)}%>
        </div>
      </div>
  	</div>
    <div class="text-center">
      <h1 class="text-center "><%= user_measurement_content.try(:title) %></h1>
    </div>
    <hr>
    <p class="text-center"><%= user_measurement_content.try(:description) %></p>


    <div class="row narrow-row-md">
      <div class="col-sm-6">
        <div class="form-group">
          <label class="control-label">Head<span class="required">*</span></label>
          <%= f.number_field :head, :class => 'form-control', :placeholder => user_msr_head.try(:title) %>
        </div>
      </div>
    </div>
    <div class="row narrow-row-md">
      <div class="col-sm-6">
        <div class="form-group">
          <label class="control-label">Left Shoulder<span class="required">*</span></label>
          <%= f.number_field :left_shoulder, :class => 'form-control', :placeholder => user_msr_shld_lft.try(:title) %>
        </div>
      </div>
    </div>
    <div class="row narrow-row-md">
      <div class="col-sm-6">
        <div class="form-group">
          <label class="control-label">Right Shoulder<span class="required">*</span></label>
          <%= f.number_field :right_shoulder, :class => 'form-control', :placeholder => user_msr_shld_rht.try(:title) %>
        </div>
      </div>
    </div>
    <div class="row narrow-row-md">
      <div class="col-sm-6">
        <div class="form-group">
          <label class="control-label">Left Arm<span class="required">*</span></label>
          <%= f.number_field :left_arm, :class => 'form-control', :placeholder => user_msr_lft_arm.try(:title) %>
        </div>
      </div>
    </div>
  <p>
  	<%#= f.submit user_measurement_btn_content.try(:title) , :class => 'btn btn-primary' %>
  </p>
<% end %>