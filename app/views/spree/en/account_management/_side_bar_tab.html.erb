<% profile_nav_txt     = Spree::PageContent.from_gen_slug('profile-nav-txt') %>
<% profile_info_txt    = profile_nav_txt.spec_slug('profile-nav-txt-personal-info').last %>
<% addresses_txt    = profile_nav_txt.spec_slug('profile-nav-txt-addresses').last %>
<% orders_txt    = profile_nav_txt.spec_slug('profile-nav-txt-orders').last %>
<% wishlist_txt    = profile_nav_txt.spec_slug('profile-nav-txt-wishlist').last %>
<% reviews_txt    = profile_nav_txt.spec_slug('profile-nav-txt-reviews').last %>
<% settings_txt    = profile_nav_txt.spec_slug('profile-nav-txt-settings').last %>
<% messages_txt    = profile_nav_txt.spec_slug('profile-nav-txt-messages').last %>
<% sc_txt          = profile_nav_txt.spec_slug('profile-nav-txt-support-centre').last %>
<% logout_txt    = profile_nav_txt.from_gen_slug('profile-nav-txt-logout').last %>
<% stores_txt    = profile_nav_txt.from_gen_slug('profile-nav-txt-stores').last %> 


<% url = request.original_url%>
<% @user = @user.present? ? @user : spree_current_user %>
 <% Globalize.with_locale (I18n.locale) do %> 
  <div class="col-lg-2 col-md-2 col-sm-3 option-stor-lft p-0 disp-non">
    <ul class="profile-set-mg">
      <%= image_tag "profile-img.jpg", alt: "", width: "75", height: "75" %>
      <h5><%= @user.full_name %></h5>
      <li><a href="#"><%= @user.email %></a></li>
      <li><a href="#"><%= @user.phone_number %></a></li>
    </ul>
    <ul class="rev_vw">
      <li><%= image_tag "per-information-icon.png", alt: "" %><%= link_to  profile_info_txt.try(:title), spree.edit_account_path(partial: "personal_information", with_form: true, lang: "en"), class: url.include?("personal_information") ? "active" : "" %></li>

      <li><%= image_tag "address-icon.png", alt: "" %><%= link_to addresses_txt.try(:title), spree.edit_account_path(partial: "addresses", lang: "en"), class: url.include?("addresses") ? "active" : "" %></li>

      <li><%= image_tag "order-icon.png", alt: "" %><%= link_to orders_txt.try(:title), spree.edit_account_path(partial: "orders",with_form: true, lang: "en"), class: url.include?("orders") ? "active" : "" %></li>
      <li><%= image_tag "apointment-icon.png", alt: "" %><a href="#" class="tab_link_disable">My Appointments</a></li>
      <li><%= image_tag "wishlist-icon.png", alt: "" %><%= link_to wishlist_txt.try(:title), spree.edit_account_path(partial: "wishlist", lang: "en"),class: url.include?("wishlist") ? "active" : ""%></li>
      <li><%= image_tag "reviews-icon.png", alt: "" %><%= link_to reviews_txt.try(:title), spree.edit_account_path(partial: "reviews",with_form: true, lang: "en"),class: url.include?("reviews") ? "active" : ""%></li>
      <li><%= image_tag "stor-icon.png", alt: "" %><a href="store-listing-en.html" class="tab_link_disable"><%= stores_txt.try(:title) %></a></li>
      <li><%= image_tag "setting-icon.png", alt: "" %><a href="#" class="tab_link_disable"><%= settings_txt.try(:title)%></a></li>
      <li><%= image_tag "message-icon.png", alt: "" %><a href="#" class="tab_link_disable"><%= messages_txt.try(:title)%></a></li>
      <li><%= image_tag "support-icon.png", alt: "" %><a href="#"  class="tab_link_disable"><%= sc_txt.try(:title)%></a></li>
      <li class="log_ut"><%= image_tag "acc-log-out.png", alt: "" %><a href="#" class="tab_link_disable"><%= logout_txt.try(:title)%></a></li>
    </ul>
  </div>

<% end %>