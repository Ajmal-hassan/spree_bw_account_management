      <%#= address_form.label :address2, Spree.t(:street_address_2) %>
      <%= address_form.text_field :address2, class: 'form-control', placeholder: address_form.object.persisted? ? ex_contact_address2.try(:title) : new_contact_address2.try(:title) %>
